        {
            "path": "dist/avatar-view.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@size-limit/preset-small-lib": "^4.5.5",
        "@types/react": "^17.0.15",
        "@types/react-dom": "^17.0.9",
        "husky": "^7.0.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "size-limit": "^5.0.2",
        "tsdx": "^0.14.1",
        "tslib": "^2.3.0",
        "typescript": "^3.9.10"
    },
    "dependencies": {
        "@react-three/drei": "^7.2.2",
